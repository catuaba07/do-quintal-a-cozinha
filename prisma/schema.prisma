generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String  @id
  name         String
  phone_number String  @unique
  social_name  String?
  instagram    String?

  Product Product[]
}

model Product {
  id           String   @id
  product_name String
  description  String?
  category     Category
  image_url    String?
  audio_url    String?
  video_url    String?

  profile    Profile @relation(fields: [profile_id], references: [id])
  profile_id String
}

enum Category {
  AGRICOLA
  ARTESANATO
  PROCESSADO
}
