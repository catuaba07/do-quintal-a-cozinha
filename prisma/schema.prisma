generator client {
  provider = "sqlite"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Offer {
  id           String  @id
  name         String
  social_name  String?
  phone_number String
  instagram    String?

  product_name String
  description  String
  category     Category
  img_path     String?
  audio_path   String?
  video_path   String?
}

enum Category {
  AGRICOLA
  ARTESANATO
  PROCESSADO
}
