generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String  @id
  name         String
  phone_number String  @unique
  social_name  String?
  instagram    String?

  Product Product[]
}

model Product {
  id           String   @id
  product_name String
  description  String?
  category     Category
  media        Media[]

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String
}

model Media {
  id         String    @id
  url        String
  media_type MediaType

  Product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
}

enum MediaType {
  AUDIO
  IMAGE
  VIDEO
}

enum Category {
  AGRICOLA
  ARTESANATO
  PROCESSADO
}
