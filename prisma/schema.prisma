generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String  @id
  name         String
  phone_number String  @unique
  social_name  String?
  instagram    String?

  Product Product[]
  Recipe  Recipe[]
}

model Product {
  id           String         @id
  product_name String
  description  String?
  price        Decimal?
  category     Category
  media        ProductMedia[]

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String
}

model Media {
  id         String    @id
  url        String
  media_type MediaType

  productMedia ProductMedia[]
  recipeMedia  RecipeMedia[]
  storyMedia   StoryMedia[]
}

model ProductMedia {
  productId String
  mediaId   String

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  media   Media   @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@id([productId, mediaId])
}

model RecipeMedia {
  recipeId String
  mediaId  String

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  media  Media  @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@id([recipeId, mediaId])
}

model Recipe {
  id                          String           @id
  title                       String
  description                 String
  preparation_time_in_minutes Int
  cooking_time_in_minutes     Int
  number_of_servings          Int
  difficulty                  RecipeDifficulty
  created_at                  DateTime         @default(now())
  updated_at                  DateTime         @updatedAt

  ingredients Json
  steps       RecipeStep[]
  media       RecipeMedia[]

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String
}

model RecipeStep {
  id          Int    @id @default(autoincrement())
  step_number Int
  instruction String

  recipe    Recipe @relation(fields: [recipe_id], references: [id], onDelete: Cascade)
  recipe_id String
}

model Story {
  id              String        @id
  title           String
  name            String
  description     String
  content         String
  region          Region        @relation(fields: [regionId], references: [id], name: "RegionStories")
  regionId        String
  slug            String        @unique

  media StoryMedia[]
}

model StoryMedia {
  storyId String
  mediaId String

  story Story @relation(fields: [storyId], references: [id], onDelete: Cascade)
  media Media @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@id([storyId, mediaId])
}

model Region {
  id    String  @id
  name  String
  stories Story[] @relation(name: "RegionStories")
}

enum MediaType {
  AUDIO
  IMAGE
  VIDEO
}

enum Category {
  AGRICOLA
  ARTESANATO
  PROCESSADO
}

enum RecipeDifficulty {
  EASY
  INTERMEDIARY
  HARD
}
